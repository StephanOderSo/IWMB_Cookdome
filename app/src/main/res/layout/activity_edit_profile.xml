<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.EditProfileActivity"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/photoCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="100dp"
        android:backgroundTint="@color/lavender"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="@string/image"
                android:id="@+id/photo"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ImageView
                android:contentDescription="@string/image"
                android:id="@+id/editphoto"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/add_photo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:id="@+id/namecontainer"
        app:layout_constraintTop_toBottomOf="@+id/photoCard"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="15dp"
            app:drawableStartCompat="@drawable/person" />

        <ImageButton
            android:contentDescription="@string/edit"
            android:id="@+id/editname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lavender_btn"
            android:padding="15dp"
            android:src="@drawable/edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nameView"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:drawableStart="@drawable/person"
            android:id="@+id/name"
            android:hint="@string/name"
            android:minEms="15"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="15dp"
            android:background="@drawable/lavender_border"
            android:visibility="gone"/>
        <ImageButton
            android:contentDescription="@string/image"
            android:id="@+id/namedone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/done"
            android:background="@drawable/lavender_btn"
            android:padding="15dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/namecontainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/emailView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="15dp"
            app:drawableStartCompat="@drawable/email" />

        <ImageButton
            android:contentDescription="@string/edit"
            android:id="@+id/editemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:background="@drawable/lavender_btn"
            android:padding="15dp"
            app:layout_constraintStart_toEndOf="@+id/emailView"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:drawableStart="@drawable/email"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:minEms="15"
            android:hint="@string/email"
            android:layout_marginVertical="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="15dp"
            android:background="@drawable/lavender_border"
            android:visibility="gone"/>
        <ImageButton
            android:contentDescription="@string/image"
            android:id="@+id/emaildone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/done"
            android:background="@drawable/lavender_btn"
            android:padding="15dp"
            app:layout_constraintStart_toEndOf="@+id/email"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailcontainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/password"
            android:id="@+id/passwordView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="15dp"
            app:drawableStartCompat="@drawable/lock" />

        <ImageButton
            android:contentDescription="@string/edit"
            android:id="@+id/editpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:background="@drawable/lavender_btn"
            android:padding="15dp"
            app:layout_constraintStart_toEndOf="@+id/passwordView"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:drawableStart="@drawable/lock"
            android:id="@+id/password"
            android:minEms="15"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:layout_marginVertical="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="15dp"
            android:background="@drawable/lavender_border"
            android:visibility="gone"/>
        <EditText
            android:drawableStart="@drawable/lock"
            android:id="@+id/passwordRepeat"
            android:minEms="15"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:layout_marginVertical="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:padding="15dp"
            android:background="@drawable/lavender_border"
            android:visibility="gone"/>
        <ImageButton
            android:contentDescription="@string/image"
            android:id="@+id/passworddone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/done"
            android:background="@drawable/lavender_btn"
            android:padding="15dp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordRepeat"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/saveUserchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/lavender_btn"/>
    <Button
        android:id="@+id/cancelUserChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/lavender_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>