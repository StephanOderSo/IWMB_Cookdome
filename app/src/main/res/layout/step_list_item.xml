<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/counter"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="4dp"
            android:textColor="@color/lavender"
             />

        <TextView
            android:id="@+id/step"
            android:textSize="17sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Trockene Zutaten vermischen, langsam ei und milch hinzugeben, hahakhdkeygkyjytfjttvjuygjcuyeaj hisuhyydye jsd bdyiua bydeiyufg bydsg ksdfku"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/counter"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="4dp"
            android:layout_marginLeft="20dp" />
        <ImageButton
            android:id="@+id/removeStepBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lavender_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/remove"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>