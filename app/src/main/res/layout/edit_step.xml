<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="4dp">
<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/lightblue"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent">
    <ImageButton
        android:id="@+id/editstepBtn"
        android:contentDescription="@string/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/edit"
        android:background="@drawable/lavender_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
<ImageButton
    android:contentDescription="@string/image"
    android:id="@+id/updateStepbtn"
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:srcCompat="@drawable/remove"
    android:background="@drawable/lavender_btn"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    app:layout_constraintBottom_toTopOf="@+id/removeStepbtn"
    app:layout_constraintEnd_toEndOf="parent"
    android:visibility="gone"
     />
    <ImageButton
        android:contentDescription="@string/image"
        android:id="@+id/removeStepbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/sync"
        android:background="@drawable/lavender_btn"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
         />
    <TextView
        android:id="@+id/counter"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/lavender"
        app:layout_constraintBottom_toBottomOf="parent"
        />

<EditText
    android:id="@+id/editStep"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/lightblue"
    android:hint="@string/step"
    android:inputType="textLongMessage"
    android:ems="15"
    android:paddingHorizontal="10dp"
    android:paddingVertical="12dp"
    android:layout_margin="4dp"
    app:layout_constraintStart_toEndOf="@+id/counter"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:contentDescription="@string/image"
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/arrow_up_lav"
        app:layout_constraintBottom_toTopOf="@+id/editStep"
        android:visibility="gone"
        />
    <ImageView
        android:contentDescription="@string/image"
        android:id="@+id/down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/arrow_down_lav"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>