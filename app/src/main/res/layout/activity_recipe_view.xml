<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.RecipeViewActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:contentDescription="@string/image"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/camera"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:contentDescription="@string/image"
                android:id="@+id/favourite"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/unliked"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="4dp"
                />
            <ImageView
                android:contentDescription="@string/image"
                android:id="@+id/edit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/edit"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="4dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_name"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="21sp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="35dp"/>

            <TextView
                android:id="@+id/category"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipeName"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:contentDescription="@string/image"
                android:id="@+id/portionIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/person"
                app:layout_constraintRight_toLeftOf="@+id/portions"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:contentDescription="@string/image"
                android:id="@+id/portions"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/portions"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:contentDescription="@string/image"
                android:id="@+id/dietaryIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/check_lav"
                app:layout_constraintEnd_toStartOf="@+id/dietary"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/dietary"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dietary"
                app:layout_constraintStart_toEndOf="@+id/time"
                app:layout_constraintEnd_toStartOf="@+id/portionIcon"
                app:layout_constraintTop_toBottomOf="@+id/category"

                android:layout_marginStart="5dp"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/timeIcon"
                android:contentDescription="@string/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/time_lav"
                app:layout_constraintRight_toLeftOf="@+id/time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:textSize="19sp"
                android:layout_height="wrap_content"
                android:text="@string/preptime"
                app:layout_constraintLeft_toRightOf="@+id/timeIcon"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/ingredientHeading"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="25dp"
                android:fontFamily="@font/abel"
                android:textAllCaps="true"
                android:textColor="@color/lavender"
                android:textStyle="bold"
                android:text="@string/ingredients"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/time"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>

            <ListView
                android:id="@+id/ingredientList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ingredientHeading"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="40dp"/>

            <TextView
                android:id="@+id/stepHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:autoSizeMinTextSize="25dp"
                android:fontFamily="@font/abel"
                android:text="@string/steps"
                android:textAllCaps="true"
                android:textColor="@color/lavender"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingredientList" />

            <ListView
                android:id="@+id/stepList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stepHeading"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="40dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>